<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/homeCleancardViewOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        card_view:cardCornerRadius="5dp"
        android:padding="10dp"
        card_view:cardElevation="2dp"
        android:layout_gravity="center|center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/background_cardview"
            android:gravity="center|center_horizontal"
            android:layout_gravity="center_horizontal|center">
            <RelativeLayout
                android:id="@+id/r"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/img2" />
                <!--<TextView-->

                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="Ecommerce"-->
                    <!--android:textSize="13sp"-->
                    <!--android:padding="10dp"-->
                    <!--android:layout_gravity="center|center_horizontal"-->
                    <!--android:gravity="center|center_horizontal"-->
                    <!--android:textStyle="bold"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:fontFamily="@font/fonts"/>-->

                <TextView
                    android:id="@+id/imgLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/catagoryIDs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </RelativeLayout>
            <TextView
                android:id="@+id/catalogName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="14sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="@color/grey_darks"
                android:layout_gravity="center"
                android:gravity="center|top"
                android:text="@string/app_name"
                android:layout_marginBottom="5dp"
                />

            <!--<Button-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="13sp"-->
                <!--android:layout_gravity="right"-->
                <!--android:text="go!"-->
                <!--android:textAllCaps="false"-->
                <!--android:background="@drawable/button_shape"/>-->
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>